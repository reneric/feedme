
<div id="recent_episodes">
  <h3>Recent Articles</h3>
  <ul>
  <% for entry in FeedEntry.all(:limit => 40, :order => "published_at desc") %>
  
    <li><h1><%= link_to h(entry.name), entry.url %></h1><h5><%= Date.parse(entry.published_at.to_s).strftime("%B %e %Y") %></h5>
    <h3><%= Feed.where(:id => entry.feed_id).first.name %></h3></li>
  <% end %>
  </ul>
</div>